<div class="note-content">
  <h3>{{model.id}}</h3>

  <p>{{model.content}}</p>

  {{textarea value=model.content}}

  {{#if model.hasDirtyAttributes}}<button {{action 'saveNote' on='click'}}>Save Note</button>{{/if}}

  <div class="row"><br>
    <button class="nav-button" id="open-file">Open Image</button>
    <button class="nav-button" id="copy-html">Crop Text</button>
    <button class="nav-button" id="save-file">OCR Recipe</button>
  </div>

</div>
